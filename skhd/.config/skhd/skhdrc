# Spaces fokussieren
ctrl + alt + cmd - 1 : yabai -m space --focus 1
ctrl + alt + cmd - 2 : yabai -m space --focus 2
ctrl + alt + cmd - 3 : yabai -m space --focus 3
ctrl + alt + cmd - 4 : yabai -m space --focus 4
ctrl + alt + cmd - 5 : yabai -m space --focus 5
ctrl + alt + cmd - 6 : yabai -m space --focus 6
ctrl + alt + cmd - 7 : yabai -m space --focus 7
ctrl + alt + cmd - 8 : yabai -m space --focus 8
ctrl + alt + cmd - 9 : yabai -m space --focus 9
ctrl + alt + cmd - 0 : yabai -m space --focus 10

# Fenster zu Space verschieben + dorthin springen
shift + ctrl + alt + cmd - 1 : yabai -m window --space 1  ; yabai -m space --focus 1
shift + ctrl + alt + cmd - 2 : yabai -m window --space 2  ; yabai -m space --focus 2
shift + ctrl + alt + cmd - 3 : yabai -m window --space 3  ; yabai -m space --focus 3
shift + ctrl + alt + cmd - 4 : yabai -m window --space 4  ; yabai -m space --focus 4
shift + ctrl + alt + cmd - 5 : yabai -m window --space 5  ; yabai -m space --focus 5
shift + ctrl + alt + cmd - 6 : yabai -m window --space 6  ; yabai -m space --focus 6
shift + ctrl + alt + cmd - 7 : yabai -m window --space 7  ; yabai -m space --focus 7
shift + ctrl + alt + cmd - 8 : yabai -m window --space 8  ; yabai -m space --focus 8
shift + ctrl + alt + cmd - 9 : yabai -m window --space 9  ; yabai -m space --focus 9
shift + ctrl + alt + cmd - 0 : yabai -m window --space 10 ; yabai -m space --focus 10

# Fokus verschieben (hjkl)
ctrl + alt + cmd - h : yabai -m window --focus west
ctrl + alt + cmd - j : yabai -m window --focus south
ctrl + alt + cmd - k : yabai -m window --focus north
ctrl + alt + cmd - l : yabai -m window --focus east

# Fenster tauschen (Shift + hjkl)
shift + ctrl + alt + cmd - h : yabai -m window --swap west
shift + ctrl + alt + cmd - j : yabai -m window --swap south
shift + ctrl + alt + cmd - k : yabai -m window --swap north
shift + ctrl + alt + cmd - l : yabai -m window --swap east

#change focus between external displays (left and right)
ctrl + alt + cmd - s: yabai -m display --focus west
ctrl + alt + cmd - g: yabai -m display --focus east

# Spiegeln & Rotieren
ctrl + alt + cmd - x : yabai -m space --mirror x-axis
ctrl + alt + cmd - y : yabai -m space --mirror y-axis
ctrl + alt + cmd - r : yabai -m space --rotate 90
shift + ctrl + alt + cmd - r : yabai -m space --rotate 270
ctrl + alt + cmd - b : yabai -m space --balance

# toggle window float
ctrl + alt + cmd - t : yabai -m window --toggle float --grid 9:8:1:1:6:6

# toggle window float - almost fullscreen
ctrl + alt + cmd - z : yabai -m window --toggle float --grid 16:16:1:1:14:14

# maximize a window
shift + ctrl + alt + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt + cmd - e : yabai -m space --balance

# move window and split
ctrl + alt + cmd - n : yabai -m window --warp west
ctrl + alt + cmd - m : yabai -m window --warp south
ctrl + alt + cmd - 0x2B  : yabai -m window --warp north   # comma
ctrl + alt + cmd - 0x2F  : yabai -m window --warp east   # period

# move window to display left and right
ctrl + alt + cmd - d : yabai -m window --display west; yabai -m display --focus west;
ctrl + alt + cmd - f : yabai -m window --display east; yabai -m display --focus east;

# Layout-Ratios pro aktivem Split
ctrl + alt + cmd - u : yabai -m window --ratio abs:0.25
ctrl + alt + cmd - i : yabai -m window --ratio abs:0.50
ctrl + alt + cmd - o : yabai -m window --ratio abs:0.75

# toggle last used windows
ctrl + alt + cmd - a : yabai -m window --focus recent;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# swap monitors
shift + ctrl + alt + cmd - q : $HOME/.config/skhd/swap_monitors.sh
